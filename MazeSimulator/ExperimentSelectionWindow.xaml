<Window x:Class="MazeSimulator.ExperimentSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeSimulator"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="ExperimentSelectionWindow" Height="600" Width="500">
    <Grid>
        <ComboBox x:Name="ExperimentSelectionComboBox" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="327"/>
        <TextBlock x:Name="textBlock" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="140" HorizontalAlignment="Left" Text="Experiment Configuration:" TextAlignment="Right"/>
    </Grid>
</Window>
